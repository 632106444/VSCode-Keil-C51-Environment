{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compileKeil",
            "type": "shell",
            "command": "${workspaceFolder}\\.vscode\\compileKeil.bat",
            "args": [
                "\"${workspaceFolder}\"",
                "\"${workspaceFolder}\\src\"",
                "main"
            ],
            "options": {
                "cwd": "${workspaceFolder}\\build"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": false,
                "echo": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "^(.*):(\\d+):\\s+(error|warning|note) (\\d+):\\s+([\\s\\S]*)$",
                        "file": 1,
                        "line": 2,
                        "severity": 3,
                        "message": 5
                    }
                ]
            }
        }
    ]
}